@model UsuarioModel
<link rel="stylesheet" href="~/css/indexlogin.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
    href="https://fonts.googleapis.com/css2?family=Antonio:wght@200&family=Roboto+Condensed:wght@300&family=Roboto:wght@100&family=VT323&display=swap"
    rel="stylesheet">


<div class="formlogin">


    <form asp-controller="Cliente" id="form" asp-action="EditarUsuario" method="post">

        <h2>Editar informações</h2>
        <label for="">Nome:</label>
        <input asp-for="Nome" placeholder="@Model.Nome">

        <label for="">Celular:</label>
        <input asp-for="Celular" placeholder="@Model.Celular">

        <label for="">Email:</label>
        <input asp-for="Email" placeholder="@Model.Email">

        <label for="">Senha:</label>
        <input asp-for="Senha" placeholder="@Model.Senha">


        <input type="submit" value="Enviar">


    </form>
</div>


<style>
    h1 {
        color: #00e600;
        margin-bottom: 20px;
    }

    input {
        margin-bottom: 20px;
    }

    h2 {
        color: #00e600;

        margin-bottom: 30px;
        opacity: 80%;
        font-size: 17px;

    }

    .formlogin {
        width: 100%;
        display: flex;
        align-content: center;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    #form {
        font-family: 'Roboto', sans-serif;
        padding: 50px;
        height: 440px;
        border-radius: 40px;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
        align-items: center;
        background-color: white;
        margin-bottom: 300px;
        margin-top: 100px;
    }



    input[type=text],
    input[type=password] {


        width: 100%;
        box-shadow: rgba(0, 0, 0, 0.09) 0px 3px 12px;
        padding: 10px 5px 5px;
        background-color: white;
        border: 2px solid white;
        border-radius: 4px;
        margin-top: 10px;
        transition: all 0.3s ease;

    }

    label {
        position: relative;
        margin-right: 200px;
        font-size: 14px;
    }

    input::placeholder {
        font-size: 15px;
    }

    input[type="submit"] {
        cursor: pointer;
        background-color: #00e600;
        width: 100%;
        margin-top: 10px;
        color: white;
        border: none;
        font-family: 'Roboto', sans-serif;
        height: 55px;
        font-weight: 900;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
    }
</style>